---
import HeadCommon from '../components/HeadCommon.astro';
import HeadSEO from '../components/HeadSEO.astro';
import PageContent from '../components/PageContent.astro';
import LeftSidebar from '../components/LeftSidebar.astro';
import RightSidebar from '../components/RightSidebar.astro';
import * as CONFIG from '../config';
import '../styles/main.scss';

const { content = {} } = Astro.props;
const path = new URL(Astro.request.url).pathname;
const currentPage = path.split('/').at(-1);
---

<html dir={content.dir ?? 'ltr'} lang={content.lang ?? 'en-us'} class="initial">
	<head>
		<HeadCommon />
		<HeadSEO {content} canonicalURL={Astro.canonicalURL} />
		<title>{content.title ? `${content.title} ðŸš€ ${CONFIG.SITE.title}` : CONFIG.SITE.title}</title>
	</head>

	<body>
		<LeftSidebar currentPage={currentPage} />
		<main>
			<div class="main-wrapper">
				<PageContent content={content}>
					<slot />
				</PageContent>
			</div>
		</main>
	</body>
	<script type="module">
		// import.meta.glob("../../node_modules/breeze-components/index.js");
	</script>
</html>

<style>
html {
	scroll-behavior: smooth;
}
body {
  font-family: "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
    Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
  display: grid;
  grid-template-columns: auto 1fr;
}
main {
	padding: 2rem;
	height: 100vh;
	height: 100dvh;
	overflow-y: auto;
	scroll-behavior: smooth;
}
.main-wrapper {
	max-width: 75ch;
	margin: auto;
}
</style>

