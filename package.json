{
  "name": "cucumber-components",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "main": "index.js",
  "files": [
    "dist/"
  ],
  "scripts": {
    "test": "web-test-runner ./src/components/*/*.test.js --coverage --node-resolve",
    "test:watch": "web-test-runner ./src/components/*.test.js --coverage --node-resolve --watch",
    "dev": "vite",
    "build": "node copyHTML.js && node minifyHTML.js && vite build && node renameHTML.js",
    "preview": "vite preview",
    "cypress:open": "cypress open",
    "format": "biome format --write ./src"
  },
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@babel/plugin-proposal-decorators": "^7.22.7",
    "@biomejs/biome": "^1.0.0",
    "@open-wc/testing": "^3.2.0",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-terser": "^0.4.3",
    "@web/test-runner": "^0.17.0",
    "cypress": "^12.17.4",
    "cypress-axe": "^1.5.0",
    "cypress-ct-lit": "^0.3.3",
    "html-minifier": "^4.0.0",
    "lit": "^2.8.0",
    "rollup": "^3.28.0",
    "vite": "^4.4.9"
  }
}
